{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            "dom"
        ],
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "rootDir": "packages",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true
    },
    "exclude": [
        "node_modules",
        "scripts"
    ],
    "linterOptions": {
        "exclude": ["node_modules/**", "scripts/**"]
    }
}
