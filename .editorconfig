# http://editorconfig.org
root = true

[*]
indent_size = 2
# Possible values - tab, space
indent_style = space
# Possible values - lf, crlf, cr
end_of_line = lf
# Possible values - latin1, utf-8, utf-16be, utf-16le
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{js, ts}]
indent_size = 2
max_line_length = 100

[*.{yml, yaml}]
indent_size = 2

[*.{html, xml}]
indent_size = 4

[*.{css, scss, json}]
indent_size = 4

[*.{md, markdown}]
max_line_length = off
trim_trailing_whitespace = false
